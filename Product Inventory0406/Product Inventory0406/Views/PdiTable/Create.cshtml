@model Product_Inventory0406.Models.pdi_table


@{
    ViewBag.Title = "新增產品資料";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
            @*<h3>新增產品資料</h3> *@
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">產品編號</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProductKey, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductKey, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品名稱</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">產品種類</label>
            <div class="col-md-10">
                <select id="Product_Category" name="Product_Category" class="form-control">
                    <option value="rfid.png">RFID</option>
                    <option value="tag.png">Tag</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">RFID規格</label>
            <div class="col-md-10">
                <select id="RFID_Category" name="RFID_Category" class="form-control">
                    <option value="HF">HF</option>
                    <option value="UHF">UHF</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">安全庫存量</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SafeAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SafeAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">上市日期</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.InsertDate, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                @Html.ValidationMessageFor(model => model.InsertDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增資料" class="btn btn-default" />
            </div>
        </div>
    </div>

    




